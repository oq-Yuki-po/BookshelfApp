- 
  var textbox = [
                {placeholder:'TITLE',id:'title',name:'タイトル'},
                {placeholder:'AUTHOR',id:'author',name:'著者'},
                {placeholder:'ISBN',id:'isbn',name:'ISBN'},
              ]
section#menu-search.searc-main
  section.search
        .search-form
          each item in textbox
              label(for=item['id']).search-form-label #{item.name}
              input(type="text",placeholder=item['placeholder'],id=item['id']).search-form-text
          button.btn.btn_register#register Register
          button.btn.btn_search#search Searchs
  section#search_result.search-result